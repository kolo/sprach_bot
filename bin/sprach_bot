#!/usr/bin/env ruby

lib_path = File.expand_path('../lib', File.dirname(__FILE__))
$LOAD_PATH.unshift(lib_path)

require 'bundler/setup'
require 'dotenv'

Dotenv.load

require 'sprach_bot'

http_client = Telegram::HTTPClient.new(ENV['telegram_api_token'])
client = Telegram::Client.new(http_client)
p client.get_me
